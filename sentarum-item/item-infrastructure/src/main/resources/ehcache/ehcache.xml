<?xml version="1.0" encoding="UTF-8"?>

<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.6.xsd">

    <persistence directory="${java.io.tmpdir}/ehcache/item"></persistence>


    <cache alias="io.scleropages.sentarum.core.fsm.repo.StateRepository.getIdByName">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.core.fsm.repo.StateRepository.getById">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.core.fsm.repo.StateMachineDefinitionRepository.getIdByName">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.core.fsm.repo.StateMachineDefinitionRepository.getById">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.core.fsm.repo.EventDefinitionRepository.getIdByName">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.core.fsm.repo.EventDefinitionRepository.getById">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.core.fsm.repo.StateTransitionRepository.findAllByStateMachineDefinition_Id">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.core.fsm.repo.StateMachineExecutionRepository.getIdByBizTypeAndBizId">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.item.category.repo.StandardCategoryRepository.getFullStandardCategoryGraph">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>1</heap> <!--a single instance. ensure it can keep all entries from sec_acl_permission in heap memory-->
    </cache>

    <cache alias="io.scleropages.sentarum.item.property.repo.PropertyMetaRepository.getDetailsById">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.item.repo.SpuRepository.getById">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.item.repo.ItemRepository.getById">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.item.repo.ItemRepository.readById">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.item.repo.SpuRepository.readById">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.item.repo.AbstractSkuRepository.readById">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache alias="io.scleropages.sentarum.item.category.repo.AbstractCategoryRepository.readById">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <cache-template name="heap-cache">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="MB">10</heap>
        </resources>
    </cache-template>

    <cache-template name="offheap-cache">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="MB">10</heap>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache-template>

    <cache-template name="persistent-cache">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="MB">10</heap>
            <offheap unit="MB">50</offheap>
            <disk persistent="true" unit="MB">100</disk>
        </resources>
    </cache-template>
</config>